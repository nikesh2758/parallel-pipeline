pipeline {
  agent none
  stages {
    stage ('build') {
       steps {
       agent slave1
          sh '''
                  echo "this is build stage"
                  sleep 2
             '''
             }
    }
    stage ('deploy') {
 parallel {

    stage ('deploy1') {
       steps {
       agent master
          sh '''
                  echo "this is deploy stage"
                  sleep 2
             '''
             }
    }
    stage ('deploy2') {
       steps {
       agent master
          sh '''
                  echo "this is deploy stage"
                  sleep 2
             '''
             }
    }
    }
    }
    stage ('test') {
       steps {
       agent slave2
          sh '''
                  echo "this is deploy stage"
                  sleep 2
             '''
             }
    }
  }
}  
